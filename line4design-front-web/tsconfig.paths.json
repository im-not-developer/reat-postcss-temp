// src/tsconfig.paths.json
{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./tmp/ts",
    "paths": {
      "~/*": ["./*"]
    },  
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  }
}
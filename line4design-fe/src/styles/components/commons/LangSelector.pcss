.lang_selector {
  display: flex;
  flex-direction: column;
  align-items: center;

  height: 40px;
  padding: 0 0;
  margin: 0px 0px 10px 0px;

  &__contents {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    width: 100%;
    max-width: 1920px;
    height: 45px;
    border: 1px solid var(--red);
    padding: 0px 40px 0px 40px;

    &__drop_lang {
      &:hover {
        cursor: pointer;
      }
    }
  }
}
